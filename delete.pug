extends layout.pug

block content
  .container.mt-5.mb-5
    div.form-container.d-flex.flex-column.align-items-center.justify-content-center
      h1.mb-3 Delete Contact
      h2.mb-3= contact.first_name + ' ' + contact.last_name
      p.mb-6 Are you sure you want to delete this contact?
      form(action=`/${contactIndex}/delete`, method='post')
        .row.justify-content-center
          .col-auto
            button.btn.btn-danger.btn-lg.mt-3.mb-3(type='submit') Yes!
          .col-auto
            button.btn.btn-secondary.btn-lg.mt-3.mb-3(type='button', onclick=`window.location.href="/${contactIndex}"`) Nevermind

doctype html
html
  head
    title Contacts
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    script(src='https://unpkg.com/leaflet@1.9.3/dist/leaflet.js')
    link(rel='stylesheet', href='https://unpkg.com/leaflet@1.9.3/dist/leaflet.css')

    style.
      .error-box {
        background-color: #f8d7da; 
        color: #721c24; 
        padding: 10px; 
        border-radius: 5px; 
      }
      
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      if user
        div.container-fluid.d-flex.justify-content-between.align-items-center
          p.account-name.text-white.mb-0 Signed in as #{user.first_name} #{user.last_name}
          button.sign-out.btn.btn-success(type='button', onclick="window.location.href='/logout'") Logout
      else
        button.sign-in.btn.btn-success(style='margin-left: 20px', type='button', onclick="window.location.href='/login'") Sign in
    block content
